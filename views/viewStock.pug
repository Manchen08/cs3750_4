extends layout

block content
    head
        link(href='stylesheets/snippet.css', rel='stylesheet')
        script(src="https://code.highcharts.com/stock/highstock.js")
        script(src="../public/javascripts/markitQuoteService.js")
        script(src="../public/javascripts/addStock.js")
        script(src="http://code.jquery.com/ui/1.12.0/jquery-ui.js")

    body
        include ./includes/messages.pug
        div.container
            each stock in stocks
                script.
                    var stockDiv = document.createElement('div');
                    var stock = {stock: '#{stock.stock}'};
                    stockDiv.className = 'chart';
                    document.getElementsByClassName('container')[0].appendChild(stockDiv);
                    var sym = stock.stock.toString();
                    var dur = 3650;
                    new Markit.InteractiveChartApi(sym, dur, stockDiv);

                    
